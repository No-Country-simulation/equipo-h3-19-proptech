generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String  @id @default(auto()) @map("_id") @db.ObjectId
  firstName String
  lastName  String
  country   String
  email     String  @unique
  prefix    Int
  phone     Int
  role      Role    @default(Inversor)
  password  String
  isDeleted Boolean @default(false)
}

enum Role {
  Admin
  Inversor
  Beneficiary
  Sealer
  Partner
  Guest
}
